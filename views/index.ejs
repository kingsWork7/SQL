<!DOCTYPE html>
<html>

<head>
    <title>Blog Home</title>
    <link rel="stylesheet" href="public/assets/style.css">
</head>

<body>
    <h1>All Posts</h1>
    <a href="/blogs/new">Create New Post</a>
    <div>
        <% posts.forEach(post=> { %>
            <div>
                <h2>
                    <%= post.title %>
                </h2>
                <p>
                    <%= post.content %>
                </p>
                <p>Posted on: <%= post.created_at %>
                </p>
            </div>
            <% }) %>
    </div>
</body>

</html>